<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aplikacja.AppController" spacing="10" alignment="center" style="-fx-padding: 20;">
    <Label fx:id="label" text="Wpisz coś i kliknij przycisk!" />
    <TextField fx:id="textField" promptText="Wpisz tekst" />
    <Button text="Zmień tekst" onAction="#onButtonClick" />
</VBox>
