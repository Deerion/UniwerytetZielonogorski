<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" style="-fx-padding: 10;" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab_12a.HelloController">
    <!-- General Information -->
    <Label text="Imię:" />
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" />

    <Label text="Nazwisko:" GridPane.rowIndex="1" />
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label prefWidth="125.0" text="Miejsce zatrudnienia:" GridPane.rowIndex="2" />
    <TextField fx:id="companyField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Stanowisko:" GridPane.rowIndex="3" />
    <TextField fx:id="positionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Address Information -->
    <Label text="Ulica:" GridPane.rowIndex="4" />
    <TextField fx:id="streetField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Miasto:" GridPane.rowIndex="5" />
    <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Kod pocztowy:" GridPane.rowIndex="6" />
    <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Województwo:" GridPane.rowIndex="7" />
    <TextField fx:id="stateField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Kraj:" GridPane.rowIndex="8" />
    <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <!-- Contact Information -->
    <Label text="Nr. telefonu:" GridPane.rowIndex="9" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <Label text="Email:" GridPane.rowIndex="10" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <Label text="Strona www" GridPane.rowIndex="11" />
    <TextField fx:id="websiteField" GridPane.columnIndex="1" GridPane.rowIndex="11" />

    <Label text="Uwagi: " GridPane.rowIndex="12" />
    <TextArea fx:id="notesArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="12" />

    <!-- Image Upload -->
    <Button alignment="CENTER" onAction="#handleUploadImage" prefHeight="100.0" prefWidth="125.0" text="Wgraj zdjęcie" GridPane.rowIndex="13" />
    <ImageView fx:id="imageView" fitHeight="100" fitWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="13" />

    <!-- Save Button -->
    <Button onAction="#handleSave" text="Zapisz" GridPane.columnIndex="1" GridPane.rowIndex="14" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
